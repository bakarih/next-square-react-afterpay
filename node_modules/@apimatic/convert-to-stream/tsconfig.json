{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "rootDir": "./src",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
  }
}
